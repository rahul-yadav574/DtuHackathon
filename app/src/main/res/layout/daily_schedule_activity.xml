<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eceff7">

    <include
        layout="@layout/toolbar_material"
        android:id="@+id/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <LinearLayout
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Meal and Prescription"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_weight="2"
            android:gravity="left"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="2 Boiled Eggs, 1 Cup Tea"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:00 PM"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2 Chapatis, Dal, Salad, Permethrin"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:gravity="left"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3:00 PM"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1 Cup Tea, 4 Biscuits, Crotorex"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:gravity="left"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7:00 PM"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2 Chapatis, Rice, Dal, Salad"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="2"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9:00 PM"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1 Mug Milk, IVREA II"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="2"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>